<p class="my-2 text-sm text-gray-600">Comment as <%= link_to current_user.username, "#", class:"link" %></p>

<%= form_for([@submission, @comment], remote: true) do |f| %>
    <div class="relative">
    <%= f.text_area :reply, class: "input h-32 border border-gray-200 resize-none", placeholder: "What are you thoughts?" %>

    <%= f.submit class: "btn btn-small btn-purple block w-full text-center mt-2 lg: mt-0 lg:text-left lg:absolute lg:bottom-0 lg:right-0 lg:mb-2 lg:mr-2 lg:w-auto lg:inline-flex" %>
    </div>
<% end %>
